<% layout('/layouts/boilerplate') %>

  <style>
    #map {
      height: 250px;
      /* smaller height */
      width: 70%;
      /* reduce width */
      margin: 20px auto;
      /* center it */
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .leaflet-control-attribution {
      font-size: 10px;
      opacity: 0.3;
    }
  </style>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-3 d-flex justify-content-between align-items-center">
        <h3>
          <%= listing.title %>
        </h3>

        <% if (currUser) { %>
          <% const isWishlisted=currUser.wishlist && currUser.wishlist.some(id=> id.toString() ===
            listing._id.toString()); %>

            <% if (isWishlisted) { %>
              <form action="/wishlist/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-light border">
                  <i class="fa-solid fa-heart" style="color: red;"></i> Remove from Wishlist
                </button>
              </form>
              <% } else { %>
                <form action="/wishlist/<%= listing._id %>" method="POST">
                  <button class="btn btn-light border">
                    <i class="fa-regular fa-heart"></i> Add to Wishlist
                  </button>
                </form>
                <% } %>

                  <% } %>

      </div>
    </div>
    </div>


    <!-- CARD -->
    <div class="card col-6 offset-3 show-card listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Image">
      <div class="card-body">
        <p class="card-text">Owned By - <i>
            <%= listing.owner.username %>
          </i></p>
        <p class="card-text"><b>
            <%= listing.title %>
          </b></p>
        <p class="card-text">
          <%= listing.description %>
        </p>
        <p class="card-text">₹ <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text">
          <%= listing.location %>
        </p>
        <p class="card-text">
          <%= listing.country %>
        </p>

        <p class="card-text">
        <form method="POST" action="/listings/<%= listing._id %>/book">
          <button class="btn btn-success">Book Now</button>
        </form>

        </p>

      </div>
    </div>



    <!-- ✅ Add map here -->
    <div id="map"></div>



    <% if(currUser && listing.owner._id.toString()===currUser._id.toString()) { %>
      <div class="row mt-3 mb-5">
        <div class="col-5 offset-3 d-flex gap-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>

        <!-- REVIEW FORM -->
        <div class="col-8 offset-3 mb-3">
          <hr>
          <% if(currUser) { %>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>


              <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating: <span id="ratingValue"></span></label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>


              <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit a comment</div>
              </div>
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>
            <% } %>

              <!-- REVIEWS -->
              <div class="row mt-4">
                <% for (let review of listing.reviews) { %>
                  <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                      <h5 class="card-title">@<%= review.author.username %>
                      </h5>
                      <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                      <p class="card-text">
                        <%= review.comment %>
                      </p>

                      <form method="POST"
                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                      </form>

                    </div>
                  </div>
                  <% } %>
              </div>
        </div>
        </div>




        <!-- JS for Rating Slider -->
        <script>
          const ratingInput = document.getElementById("rating");
          const ratingValue = document.getElementById("ratingValue");
          ratingInput.addEventListener("input", () => {
            ratingValue.textContent = ratingInput.value;
          });
        </script>



        <!-- Leaflet Map Script -->
        <script>
          // Safely pass values from EJS to JavaScript
          const lat = <%= JSON.stringify(listing.latitude) %>;
          const lon = <%= JSON.stringify(listing.longitude) %>;

          // Initialize map
          const map = L.map('map').setView([lat, lon], 13);

          // Add OpenStreetMap tiles
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
          }).addTo(map);

          // Add marker
          L.marker([lat, lon]).addTo(map)
            .bindPopup('<b><%= listing.title %></b><br><%= listing.location %>')
            .openPopup();
        </script>

  </body>